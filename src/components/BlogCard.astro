---
interface Props {
  title: string;
  excerpt: string;
  date: string;
  author: string;
  slug: string;
}

const { title, excerpt, date, author, slug } = Astro.props;
---

<article class="border rounded-lg overflow-hidden hover:shadow-lg transition-shadow">
  <div class="p-6">
    <h3 class="text-xl font-bold mb-2">
      <a href={`/blog/${slug}`} class="hover:text-gold transition-colors">
        {title}
      </a>
    </h3>
    <p class="text-gray-600 mb-4">{excerpt}</p>
    <div class="flex justify-between items-center text-sm text-gray-500">
      <span>{author}</span>
      <span>{date}</span>
    </div>
  </div>
</article>