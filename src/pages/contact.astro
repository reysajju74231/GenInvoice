---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact Us">
  <div class="container mx-auto px-6 py-12">
    <h1 class="text-4xl font-bold text-center mb-8">Contact Us</h1>
    
    <div class="max-w-2xl mx-auto">
      <form 
        name="contact"
        method="POST"
        data-netlify="true"
        class="space-y-6"
      >
        <div>
          <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
          <input
            type="text"
            name="name"
            id="name"
            required
            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gold focus:ring-gold"
          />
        </div>

        <div>
          <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
          <input
            type="email"
            name="email"
            id="email"
            required
            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gold focus:ring-gold"
          />
        </div>

        <div>
          <label for="subject" class="block text-sm font-medium text-gray-700">Subject</label>
          <input
            type="text"
            name="subject"
            id="subject"
            required
            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gold focus:ring-gold"
          />
        </div>

        <div>
          <label for="message" class="block text-sm font-medium text-gray-700">Message</label>
          <textarea
            name="message"
            id="message"
            rows="4"
            required
            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gold focus:ring-gold"
          ></textarea>
        </div>

        <div>
          <button
            type="submit"
            class="w-full bg-black text-white px-6 py-3 rounded-md hover:bg-opacity-90 transition-colors"
          >
            Send Message
          </button>
        </div>
      </form>

      <div class="mt-12 text-center">
        <h2 class="text-2xl font-bold mb-4">Other Ways to Reach Us</h2>
        <div class="space-y-2">
          <p>Email: <a href="mailto:sajjad@magnatesempire.com" class="text-gold">sajjad@magnatesempire.com</a></p>
          <p>Phone: <a href="tel:+923142834340" class="text-gold">+92 314 2834340</a></p>
          <p>Location: Karachi, Pakistan</p>
        </div>
      </div>
    </div>
  </div>
</Layout>